{
    "compilerOptions":{
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "src",
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
        "outDir": "src/dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}